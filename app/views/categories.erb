<div class="container">
  <h1>Welcome, <% @user.username %></h1>
    <h1><%= @user.password %></h1>

  <h1>Categories:</h1>
    <table>
    <% @categories.each do |category| %>
      <tr><%= category.name %>
        <% category.products.each do |product| %>
         <tr><%= product.name %></tr>
         <% end %>
      </tr>
    <% end %>
  </table>
</div>
